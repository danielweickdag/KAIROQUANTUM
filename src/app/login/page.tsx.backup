'use client';

import { useState } from 'react';
import Link from 'next/link';
import { useRouter } from 'next/navigation';
import { useAuth } from '@/contexts/AuthContext';
import { useWorkflow } from '@/contexts/WorkflowContext';
import { useTradingWorkflow } from '@/services/tradingWorkflowService';
import { useErrorHandler } from '@/lib/errorHandler';
import { Eye, EyeOff, Mail, Lock, TrendingUp } from 'lucide-react';

export default function LoginPage() {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [showPassword, setShowPassword] = useState(false);
  const [loading, setLoading] = useState(false);
  const [selectedSymbol, setSelectedSymbol] = useState<string>('AAPL');
  const { login } = useAuth();
  const { handleError } = useErrorHandler();
  const router = useRouter();
  const { createWorkflow, updateWorkflow, executeWorkflow, refreshWorkflows } = useWorkflow();
  const { getAllSymbols } = useTradingWorkflow();

  const symbolOptions = getAllSymbols();

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setLoading(true);

    try {
      const cleanEmail = email.trim();
      const cleanPassword = password.trim();
      const normalizedEmail = cleanEmail.toLowerCase() === 'demo@kairo.com'
        ? 'demo@kaire.com'
        : cleanEmail;
      await login(normalizedEmail, cleanPassword);
      router.push('/dashboard');
    } catch (error) {
      handleError(error as Error, 'Login attempt failed');
    } finally {
      setLoading(false);
    }
  };

  // Autofill demo credentials to prevent domain typos
  const handleUseDemoCredentials = () => {
    setEmail('demo@kairo.com');
    setPassword('Mougouli05172023!!#$$!!*');
  };

  // Quick actions: enable features and automate workflow
  const handleEnableFeatures = async () => {
    try {
      // Enable default automation workflows
      await updateWorkflow('auto-stop-loss', { isActive: true });
      await updateWorkflow('profit-taking', { isActive: true });
      await refreshWorkflows();
      alert('Features enabled: Stop Loss and Profit Taking automations are active.');
    } catch (err) {
      console.error('Failed to enable features', err);
      alert('Failed to enable features.');
    }
  };

  const handleAutomateWorkflow = async () => {
    try {
      const id = await createWorkflow({
        name: 'Quick Start Automation',
        description: 'Demo manual trigger workflow to showcase automation.',
        isActive: true,
        steps: [
          { id: 'manual-trigger', type: 'trigger', name: 'Manual Trigger', config: { source: 'login' }, status: 'pending' },
          { id: 'log-action', type: 'action', name: 'Log Action', config: { message: 'Workflow executed from login quick action' }, status: 'pending' }
        ],
        lastExecuted: undefined
      } as any);
      await executeWorkflow(id, { source: 'login', timestamp: new Date().toISOString() });
      alert('Automation started: Quick Start workflow executed.');
    } catch (err) {
      console.error('Failed to automate workflow', err);
      alert('Failed to start automation.');
    }
  };

  // Enable automation for selected symbol
  const handleEnableSelectedSymbol = async () => {
    try {
      const symbol = selectedSymbol || 'AAPL';
      const id = await createWorkflow({
        name: `Auto Risk for ${symbol}`,
        description: `Enable stop-loss and take-profit automations for ${symbol}.`,
        isActive: true,
        steps: [
          { id: 'symbol-selected', type: 'trigger', name: 'Symbol Selected', config: { symbol }, status: 'pending' },
          { id: 'apply-risk', type: 'action', name: 'Apply Risk Controls', config: { stopLoss: true, takeProfit: true, symbol }, status: 'pending' }
        ],
        lastExecuted: undefined
      } as any);
      await executeWorkflow(id, { source: 'login', symbol, timestamp: new Date().toISOString() });
      alert(`Enabled automation for ${symbol}.`);
    } catch (err) {
      console.error('Failed to enable symbol automation', err);
      alert('Failed to enable selected symbol.');
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 flex items-center justify-center p-4">
      <div className="max-w-md w-full space-y-8">
        {/* Logo and Header */}
        <div className="text-center">
          <div className="flex justify-center items-center space-x-2 mb-4">
            <div className="bg-gradient-to-r from-blue-600 to-purple-600 p-3 rounded-xl">
              <TrendingUp className="h-8 w-8 text-white" />
            </div>
            <h1 className="text-3xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
              KAIRO
            </h1>
          </div>
          <h2 className="text-2xl font-bold text-gray-900 dark:text-white">
            Welcome back
          </h2>
          <p className="mt-2 text-sm text-gray-600 dark:text-gray-400">
            Sign in to your account to continue trading
          </p>
        </div>

        {/* Login Form */}
        <div className="bg-white dark:bg-gray-800 py-8 px-6 shadow-xl rounded-2xl border border-gray-200 dark:border-gray-700">
          <form className="space-y-6" onSubmit={handleSubmit}>
            {/* Email Field */}
            <div>
              <label htmlFor="email" className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Email address
              </label>
              <div className="relative">
                <div className="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <Mail className="h-5 w-5 text-gray-400" />
                </div>
                <input
                  id="email"
                  name="email"
                  type="email"
                  autoComplete="email"
                  required
                  value={email}
                  onChange={(e) => setEmail(e.target.value)}
                  className="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                  placeholder="Enter your email"
                />
                {email && email.toLowerCase().includes('@kaire.com') && (
                  <div className="mt-2 flex items-center justify-between">
                    <p className="text-xs text-red-600 dark:text-red-400">
                      Did you mean demo@kairo.com?
                    </p>
                    <button
                      type="button"
                      onClick={() => setEmail('demo@kairo.com')}
                      className="text-xs px-2 py-1 rounded border border-blue-600 text-blue-600 hover:bg-blue-50 dark:hover:bg-blue-900/20"
                    >
                      Fix email
                    </button>
                  </div>
                )}
              </div>
            </div>

            {/* Password Field */}
            <div>
              <label htmlFor="password" className="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                Password
              </label>
              <div className="relative">
                <div className="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <Lock className="h-5 w-5 text-gray-400" />
                </div>
                <input
                  id="password"
                  name="password"
                  type={showPassword ? 'text' : 'password'}
                  autoComplete="current-password"
                  required
                  value={password}
                  onChange={(e) => setPassword(e.target.value)}
                  className="block w-full pl-10 pr-10 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                  placeholder="Enter your password"
                />
                <button
                  type="button"
                  className="absolute inset-y-0 right-0 pr-3 flex items-center"
                  onClick={() => setShowPassword(!showPassword)}
                >
                  {showPassword ? (
                    <EyeOff className="h-5 w-5 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300" />
                  ) : (
                    <Eye className="h-5 w-5 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300" />
                  )}
                </button>
              </div>
            </div>

            {/* Remember me and Forgot password */}
            <div className="flex items-center justify-between">
              <div className="flex items-center">
                <input
                  id="remember-me"
                  name="remember-me"
                  type="checkbox"
                  className="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded"
                />
                <label htmlFor="remember-me" className="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                  Remember me
                </label>
              </div>

              <div className="text-sm">
                <Link
                  href="/forgot-password"
                  className="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 transition-colors"
                >
                  Forgot your password?
                </Link>
              </div>
            </div>

            {/* Submit Button */}
            <div>
              <button
                type="submit"
                disabled={loading}
                className="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 transform hover:scale-[1.02]"
              >
                {loading ? (
                  <div className="flex items-center">
                    <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2"></div>
                    Signing in...
                  </div>
                ) : (
                  'Sign in'
                )}
              </button>
            </div>
          </form>

          {/* Sign up link */}
          <div className="mt-6 text-center">
            <p className="text-sm text-gray-600 dark:text-gray-400">
              Don&apos;t have an account?{' '}
              <Link
                href="/register"
                className="font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 transition-colors"
              >
                Sign up now
              </Link>
            </p>
          </div>
        </div>

        {/* Demo credentials */}
        <div className="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
          <h3 className="text-sm font-medium text-blue-800 dark:text-blue-200 mb-2">Demo Credentials</h3>
          <div className="text-xs text-blue-600 dark:text-blue-300 space-y-1">
            <p><strong>Email:</strong> demo@kairo.com</p>
            <p><strong>Password:</strong> Mougouli05172023!!#$$!!*</p>
            <button
              type="button"
              onClick={handleUseDemoCredentials}
              className="mt-3 inline-flex items-center px-3 py-1.5 rounded-md bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 text-xs"
            >
              Use Demo Credentials
            </button>
            <div className="mt-3 grid grid-cols-1 sm:grid-cols-2 gap-2">
              <div
                role="button"
                tabIndex={0}
                onClick={handleEnableFeatures}
                onKeyDown={(e) => {
                  if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); handleEnableFeatures(); }
                }}
                className="cursor-pointer rounded-md border border-green-600 text-green-700 bg-green-50 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-green-500 text-xs px-3 py-2"
              >
                Enable Features
              </div>
              <div
                role="button"
                tabIndex={0}
                onClick={handleAutomateWorkflow}
                onKeyDown={(e) => {
                  if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); handleAutomateWorkflow(); }
                }}
                className="cursor-pointer rounded-md border border-purple-600 text-purple-700 bg-purple-50 hover:bg-purple-100 focus:outline-none focus:ring-2 focus:ring-purple-500 text-xs px-3 py-2"
              >
                Enable Features
              </div>
            </div>

            {/* Enable more symbols */}
            <div className="mt-4 grid grid-cols-1 sm:grid-cols-3 gap-2 items-center">
              <label htmlFor="symbol-select" className="text-xs font-medium text-blue-800 dark:text-blue-200 col-span-1">Select Symbol</label>
              <select
                id="symbol-select"
                value={selectedSymbol}
                onChange={(e) => setSelectedSymbol(e.target.value)}
                className="col-span-1 sm:col-span-2 rounded-md border border-blue-300 dark:border-blue-700 bg-white dark:bg-gray-800 text-blue-800 dark:text-blue-200 px-2 py-1 text-xs focus:outline-none focus:ring-2 focus:ring-blue-500"
              >
                {symbolOptions.map((s: any) => (
                  <option key={s.symbol} value={s.symbol}>{s.symbol} â€” {s.name}</option>
                ))}
              </select>
              <div
                role="button"
                tabIndex={0}
                onClick={handleEnableSelectedSymbol}
                onKeyDown={(e) => { if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); handleEnableSelectedSymbol(); } }}
                className="sm:col-span-3 mt-2 cursor-pointer rounded-md border border-blue-600 text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-blue-500 text-xs px-3 py-2"
              >
                Enable Selected Symbol
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
}